<header>
    <div class="container" style="background-color: aqua">
        <img src="{{service.image}}">
        <h1>{{service.name}}</h1>
    </div>
</header>
<body>
    <div class="container" style="background-color: #ffcc00">
        <table class="table table-bordered" style="background-color: antiquewhite">
            <tr>
                <td><b>category:</b> {{service.category}}</td>
            </tr>
            <tr>
                <td><b>price:</b> {{service.price}}</td>
            </tr>
            <tr>
                <td><b>description:</b> {{service.description}}</td>
            </tr>
            <tr>
                <td><b>duration: </b>{{service.duration}}</td>
            </tr>
        </table>
    </div>

</body>
